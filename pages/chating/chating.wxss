.left-triangle{  
  height:0px;    
  width:0px;    
  border-width:20rpx;    
  border-style:solid;    
  border-color:transparent #fff transparent transparent;    
  margin-top: 20rpx;
}  
.right-triangle{  
  height:0px;    
  width:0px;    
  border-width:20rpx;    
  border-style:solid;    
  border-color:transparent transparent transparent #E8E8E8;    
