.delete-cover{
  background: #DEDEDE;
  padding-right: 30rpx;
}
.delete-cover::after{
  content: 'x';
  display: block;
  width: 20rpx;
  height: 20rpx;
  position: absolute;
  top: 20rpx;
  right: 10rpx;
  line-height: 20rpx;
  transform: scaleY(0.8);
}

/* 列表 */
.search-list{
  margin-top: 230rpx;
  padding: 0 30rpx;
  font-size: 28rpx;

}
.search-list .search-null{
  height: 100rpx;
  width: 750rpx;
  padding: 80rpx 0;
  margin-left: -30rpx;
  border-bottom: 10rpx solid #DADADA;
  margin-bottom: 40rpx;
}
.search-list .search-null view{
 text-align: center;
 color: #8E8E8E;
 font-size: 28rpx;
}
.search-list .search-null .font-wei{
  font-weight: 900;
  font-size: 32rpx;
  line-height: 60rpx;
  color: #000;
}
.search-item{
  width: 690rpx;
  height: 500rpx;
  border-bottom: 1px solid #DADADA;
  margin-bottom: 40rpx;
}
.search-item .cover{
  width: 690rpx;
  height: 348rpx;
  border-radius: 16rpx;
}
.search-item .tit{
  font-weight: 900;
  line-height: 60rpx;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.seller{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 10rpx;
}
.seller image{
  width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
}
.seller .name{
  width: 400rpx;
  margin-left: 10rpx;
}
.seller .price{
  width: 240rpx;
  text-align: right;
  font-size: 32rpx;
  font-weight: bold;
}










