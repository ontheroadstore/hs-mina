.search-fixed{
  position: fixed;
  top: 0;
  left: 0;
  width: 690rpx;
  height: 62rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid  #f2f2f2;
  background: #fff;
}
.search-fixed input{
  display: inline-block;
  width: 540rpx;
  height: 100%;
  border-radius: 30rpx;
  background: #F2F2F2;
  padding: 0 30rpx;
  font-size: 28rpx;
}
.search-fixed text{
  display: inline-block;
  height: 58rpx;
  font-size: 28rpx;
  font-weight: 600;
  margin-left: 20rpx;
  line-height: 58rpx;
}

.sort-fixed{
  width: 750rpx;
  position: fixed;
  top: 118rpx;
  left: 0rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #8E8E8E;
  height: 80rpx;
  background: #fff;
}
.sort-fixed view{
  width: 25%;
  text-align: center;
  font-size: 28rpx;
  font-weight: 600;
}
.sort-fixed .active{
  color: #000;
}
.sort-fixed .price{
  position: relative;

}
.sort-fixed .price image{
  /* position: absolute; */
  display: inline-block;
  background: #fff;
  width: 30rpx;
  height: 30rpx;
  position: relative;
  top: 5rpx;
  /* right: 10rpx */
}
.sort-fixed .price .rotate180{
  transform: rotate(180deg);
}

.bor-one{
  position: fixed;
  top: 198rpx;
  left: 30rpx;
  width: 690rpx;
  border-bottom: 1rpx solid #8E8E8E;
}
.history-search{
  margin-top: 120rpx;
  margin-bottom: 50rpx;
}
.history-search,.hot-search{
  padding: 0 0 0 30rpx;
}
.subTit .fr{
  float: right;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 30rpx;
}
.subTit .fl{
  float: left;
  line-height: 80rpx;
  height: 80rpx;
}
.subTit image{
  width: 32rpx;
  height: 32rpx;
  background: #fff;
}
.history-search text,.hot-search text{
  border: 1px solid #DADADA;
  font-weight: normal;
  font-size: 26rpx;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 12rpx;
  margin-right: 30rpx;
  margin-bottom: 16rpx;
  display: inline-block;
  min-width: 55rpx;
  text-align: center;
  position: relative;
}
.subTit view{
  display: inline-block;
  height: 30rpx;
  line-height: 30rpx;
}
.subTit .delete-all{
  font-size: 24rpx;
  color: #8E8E8E;
  margin-right: 20rpx;
  font-weight: normal;
}
.subTit .delete-finishi{
  font-size: 24rpx;
  color: #AE2121;
  padding-left: 20rpx;
  border-left: 1px solid #202123;
  font-weight: normal;
}
.history-search .subTit,.hot-search .subTit{
  line-height: 80rpx;
  font-size: 28rpx;
  font-weight: 600;
  height: 80rpx;
  padding-top: 18rpx;
}

