/* pages/getCoupon/getCoupon.wxss */
.main{
  background: #F2F2F2;
}
.content{
  padding: 30rpx;
  
}

.normal_coupon_wrap:not(:first-child){
  margin-top: 30rpx;
}
.seller_coupon_wrap{
  background: #fff;
  margin-top: 30rpx;
}

.seller_info{
  padding: 24rpx 30rpx;
  box-shadow:0 4rpx 6rpx 0 rgba(0,0,0,0.04);
  position: relative;
  z-index: 2;
}
.seller_avatar{
  display: inline-block;
  width: 36rpx;
  height:36rpx;
  vertical-align: middle;
  border-radius: 50%;
}
.seller_name{
  font-size: 24rpx;
  line-height: 36rpx;
  color: #202123;
  vertical-align: middle;
  margin-left: 20rpx;
  display: inline-block;
  width: 300rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.go_seller{
  position: absolute;
  right: 30rpx;
  top: 24rpx;
}
.go_seller text{
  font-size: 24rpx;
  line-height: 36rpx;
  vertical-align: middle;
  display: inline-block;
  margin-right: 10rpx;
  color: #8E8E8E;
}
.go_seller image{
  display: inline-block;
  height: 26rpx;
  width: 16rpx;
  vertical-align: middle;
  background: none;
}


/* 卖家优惠券 */
.seller_coupon_li{
  position: relative;
  height: 94rpx;
  width: 100%;
  padding: 46rpx 0;
  background: #fff;
}
.seller_coupon_li:not(:last-child)::after{
  content: '';
  display: block;
  width: 630rpx;
  height: 0;
  border-bottom: 4rpx dotted #979797;
  position: absolute;
  left: 30rpx;
  bottom: 0;
}

.seller_coupon_left{
  float: left;
  width: 222rpx;
  height: 100%;
  text-align: center;
  /* border-right: 1rpx dotted #979797; */
}
.seller_coupon_price{
  color: #AE2121;
  font-size: 52rpx;
  line-height: 1;
  padding: 0 0 22rpx 0;
}
.seller_coupon_tip{
  font-size:20rpx;
  color:#202123;
  line-height:1;
}
.seller_coupon_right{
  float: left;
  width: 464rpx;
  height: 100%;
  position: relative;
}
.seller_coupon_name{
  padding: 0 0 48rpx 30rpx;
  width: 238rpx;
  font-size: 28rpx;
  color: #202123;
  line-height: 1;
  height: 28rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.seller_coupon_time{
  padding: 0 0 0 30rpx;
  font-size: 20rpx;
  color: #8E8E8E;
  line-height: 1;
}
.seller_coupon_btn{
  position: absolute;
  right: 30rpx;
  top: 48rpx;
  width:68px;
  height:42rpx;
  background:#AE2121;
  border-radius:22rpx;
  font-size:26rpx;
  line-height:42rpx;
  color: #fff;
  text-align: center;
}
.seller_coupon_btn[data-can_get='0']{
  background: #D8D8D8;
}



/* 新人优惠券 普通券 */
.coupon_li{
  position: relative;
  z-index: 3;
  height: 144rpx;
  width: 690rpx;
  padding: 20rpx 0;
  /* margin: 0 auto 30rpx; */
  background: #fff;
  border-radius: 12rpx;
  box-shadow:0 4rpx 6rpx 0 rgba(0,0,0,0.04);
}
.coupon_li:last-child{
  margin-bottom: 0;
}
.coupon_left{
  float: left;
  width: 222rpx;
  height: 100%;
  text-align: center;
  border-right: 1rpx dotted #979797;
}
.coupon_price{
  color: #AE2121;
  font-size: 52rpx;
  line-height: 1;
  padding: 26rpx 0 22rpx 0;
}
.coupon_tip{
  font-size:20rpx;
  color:#202123;
  line-height:1;
}
.coupon_right{
  float: left;
  width: 464rpx;
  height: 100%;
  position: relative;
}
.coupon_name{
  padding: 10rpx 0 38rpx 30rpx;
  width: 238rpx;
  font-size: 28rpx;
  color: #202123;
  line-height: 1;
  height: 28rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.coupon_time{
  padding: 0 0 0 30rpx;
  font-size: 20rpx;
  color: #8E8E8E;
  line-height: 1;
  position: relative;
}
.coupon_time::after{
  content: '';
  display: block;
  width: 400rpx;
  border-bottom: 4rpx dotted #979797;
  position: absolute;
  left: 30rpx;
  bottom: -16rpx;
}
.coupon_btn{
  position: absolute;
  right: 30rpx;
  top: 52rpx;
  width:68px;
  height:42rpx;
  background:#AE2121;
  border-radius:22rpx;
  font-size:26rpx;
  line-height:42rpx;
  color: #fff;
  text-align: center;
}
.coupon_btn[data-can_get='0']{
  background: #D8D8D8;
}

.coupon_shot_note{
  font-size: 20rpx;
  color: #8E8E8E;
  line-height: 1;
  padding: 32rpx 30rpx 0 30rpx;
}
.coupon_shot_note text{
  display: inline-block;
  width: 200rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.coupon_shot_note_ico{
  width: 28rpx;
  height: 28rpx;
  background: none;
  float: right;
  transition: all .2s;
  transform: rotateZ(180deg);
}

.coupon_note{
  display: none;
  line-height: 44rpx;
  font-size: 28rpx;
  color: #8E8E8E;
  background: #fff;
  padding: 42rpx 30rpx 8rpx;
  margin-top: -26rpx;
  border-radius:  0 0 12rpx 12rpx;
}

.open_note .coupon_shot_note_ico{
  transform: rotateZ(0deg);
}
.open_note .coupon_note{
  display: block;
}