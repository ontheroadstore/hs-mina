/* pages/userCoupon/userCoupon.wxss */
page{
  background:rgba(245,245,245,1);
}
.main{
  padding:80rpx 0 144rpx;
  box-sizing: border-box;
}
.tag{
  width:100%;
  height:80rpx;
  background:#fff;
  display: flex;
  align-items: center;
  justify-content: space-around;
  position:fixed;
  left:0;
  top:0;
  z-index:999;
}
.tag text{
  font-size:28rpx;
  font-family:PingFangSC-Light;
  font-weight:300;
  color:rgba(32,33,35,1);
  line-height:28rpx;
}
.tag text.active{
  font-weight:600;
  color:rgba(174,33,33,1);
  position:relative
}
.tag text.active::after{
  content:'';
  position:absolute;
  top:38rpx;
  left:50%;
  margin-left:-20rpx;
  width:40rpx;
  height:6rpx;
  background:rgba(174,33,33,1);
  border-radius:8rpx;
}
/*可用**/
.content{
  padding: 30rpx; 
}
.normal_coupon_wrap:not(:first-child){
  margin-top: 30rpx;
}
.coupon_li{
  position: relative;
  z-index: 3;
  height: 144rpx;
  /* width: 690rpx; */
  padding: 20rpx 0;
  /* margin: 0 auto 30rpx; */
  background: #fff;
  border-radius: 12rpx;
  box-shadow:0 4rpx 6rpx 0 rgba(0,0,0,0.04);
}
.coupon_li:last-child{
  margin-bottom: 0;
}
.coupon_left{
  float: left;
  width: 222rpx;
  height: 100%;
  text-align: center;
  border-right: 1rpx dotted #979797;
}
.coupon_price{
  color: #AE2121;
  font-size: 52rpx;
  line-height: 1;
  padding: 26rpx 0 22rpx 0;
}
.coupon_tip{
  font-size:20rpx;
  color:#202123;
  line-height:1;
}
.coupon_right{
  float: left;
  width: 464rpx;
  height: 100%;
  position: relative;
}
.coupon_name{
  padding: 10rpx 0 38rpx 30rpx;
  width: 238rpx;
  font-size: 28rpx;
  color: #202123;
  line-height: 1;
  height: 28rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.coupon_time{
  padding: 0 0 0 30rpx;
  font-size: 20rpx;
  color: #8E8E8E;
  line-height: 1;
  position: relative;
}
.coupon_time::after{
  content: '';
  display: block;
  width: 400rpx;
  border-bottom: 4rpx dotted #979797;
  position: absolute;
  left: 30rpx;
  bottom: -16rpx;
}
.coupon_btn{
  position: absolute;
  right: 30rpx;
  top: 52rpx;
  width:68px;
  height:42rpx;
  background:#AE2121;
  border-radius:22rpx;
  font-size:26rpx;
  line-height:42rpx;
  color: #fff;
  text-align: center;
}
.coupon_btn[data-can_get='0']{
  background: #D8D8D8;
}
.coupon_shot_note{
  font-size: 20rpx;
  color: #8E8E8E;
  line-height: 1;
  padding: 32rpx 30rpx 0 30rpx;
}
.coupon_shot_note text{
  display: inline-block;
  width: 200rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.coupon_shot_note_ico{
  width: 28rpx;
  height: 28rpx;
  background: none;
  float: right;
  transition: all .2s;
  transform: rotateZ(0deg);
}

.coupon_note{
  display: none;
  line-height: 44rpx;
  font-size: 20rpx;
  color: #8E8E8E;
  background: #fff;
  padding: 42rpx 30rpx 8rpx;
  margin-top: -26rpx;
  border-radius:  0 0 12rpx 12rpx;
}

.open_note .coupon_shot_note_ico{
  transform: rotateZ(180deg);
}
.open_note .coupon_note{
  display: block;
}
/* 底部按钮 */
.go_coupon{
  width:100%;
  height:144rpx;
  background:#fff;
  position:fixed;
  left:0;
  bottom:0;
  z-index:999;
  display: flex;
  align-items: center;
  justify-content: space-around
}
.go_coupon_btn{
  width:678rpx;
  height:80rpx;
  text-align:center;
  background:rgba(174,33,33,1);
  border-radius:12rpx;
  font-size:32rpx;
  font-family:PingFangSC-Semibold;
  font-weight:600;
  color:rgba(255,255,255,1);
  line-height:80rpx;
}